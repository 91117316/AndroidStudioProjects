<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.palmdigital.simplecalcv02.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/TextViewFirst"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_height="40dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/LinearLayout"
        android:layout_below="@+id/TextViewFirst"
        android:layout_alignParentStart="true"
        android:layout_height="50dp">

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon0"
            android:id="@+id/ImageView00_1"
            android:layout_width="60px"
            android:layout_weight="1" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon1"
            android:id="@+id/ImageView01_1"
            android:layout_weight="1"
            android:layout_width="60px"
            android:elevation="0dp" />

        <ImageView
            app:srcCompat="@drawable/icon2"
            android:id="@+id/ImageView02_1"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="60px" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon3"
            android:id="@+id/ImageView03_1"
            android:layout_weight="1"
            android:layout_width="60px"/>

        <ImageView
            android:layout_width="60px"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon4"
            android:id="@+id/ImageView04_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="60px"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon5"
            android:id="@+id/ImageView05_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="60px"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon6"
            android:id="@+id/ImageView06_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="60px"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon7"
            android:id="@+id/ImageView07_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon8"
            android:id="@+id/ImageView08_1"
            android:layout_weight="1"
            android:layout_width="60px" />

        <ImageView
            android:layout_width="60px"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon9"
            android:id="@+id/ImageView09_1"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/LinearLayout"
        android:layout_alignParentEnd="true"
        android:layout_height="75dp"
        android:id="@+id/LinearLayout2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/subtract"
            android:id="@+id/ImageViewSubtract"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/addition"
            android:id="@+id/ImageViewAddition"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/TextViewSecondNumber"
        android:layout_marginTop="200dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textSize="24sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:id="@+id/LinearLayout3"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextViewSecondNumber">

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon0"
            android:id="@+id/ImageView00_2"
            android:layout_weight="1"
            android:layout_width="60px" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon1"
            android:id="@+id/ImageView01_2"
            android:layout_weight="1"
            android:layout_width="60px" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon2"
            android:id="@+id/ImageView02_2"
            android:layout_width="60px"
            android:layout_weight="1" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon3"
            android:id="@+id/ImageView03_2"
            android:layout_weight="1"
            android:layout_width="60px" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon4"
            android:id="@+id/ImageView04_2"
            android:layout_weight="1"
            android:layout_width="60px" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon5"
            android:id="@+id/ImageView05_2"
            android:layout_weight="1"
            android:layout_width="60px" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon6"
            android:id="@+id/ImageView06_2"
            android:layout_weight="1"
            android:layout_width="60px" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon7"
            android:id="@+id/ImageView07_2"
            android:layout_weight="1"
            android:layout_width="60px" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon8"
            android:id="@+id/ImageView08_2"
            android:layout_weight="1"
            android:layout_width="60px" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon9"
            android:id="@+id/ImageView09_2"
            android:layout_weight="1"
            android:layout_width="60px" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LinearLayout4"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="125dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            app:srcCompat="@drawable/equals"
            android:id="@+id/ImageViewEquals"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/TextViewAnswer"
        android:textAlignment="center"
        android:textSize="36sp"
        android:layout_marginTop="350dp"
        android:layout_height="60dp" />

</RelativeLayout>
