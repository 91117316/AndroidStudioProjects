<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.simplecalcv03.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/TextViewTop"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@android:color/holo_red_dark" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon0"
            android:id="@+id/ImageView00_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon1"
            android:id="@+id/ImageView01_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon2"
            android:id="@+id/ImageView02_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon3"
            android:id="@+id/ImageView03_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon4"
            android:id="@+id/ImageView04_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon5"
            android:id="@+id/ImageView05_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon6"
            android:id="@+id/ImageView06_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon7"
            android:id="@+id/ImageView07_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon8"
            android:id="@+id/ImageView08_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon9"
            android:id="@+id/ImageView09_1"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            app:srcCompat="@drawable/subtract"
            android:id="@+id/ImageViewSubtract"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="75dp"
            android:layout_marginLeft="0dp"
            android:elevation="1dp"
            android:layout_marginRight="5dp" />

        <ImageView
            app:srcCompat="@drawable/multiply"
            android:id="@+id/ImageViewMultiply"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="75dp"
            android:layout_marginLeft="0dp"
            android:elevation="1dp"
            android:layout_marginRight="5dp" />

        <ImageView
            app:srcCompat="@drawable/divide"
            android:id="@+id/ImageViewDivide"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="75dp"
            android:layout_marginLeft="0dp"
            android:elevation="1dp"
            android:layout_marginRight="5dp"/>

        <ImageView
            app:srcCompat="@drawable/plus"
            android:id="@+id/ImageViewAdd"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="75dp"
            android:layout_marginLeft="0dp"
            android:elevation="1dp"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/TextViewMiddle"
        android:layout_height="45dp"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon0"
            android:id="@+id/ImageView00_2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon1"
            android:id="@+id/ImageView01_2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon2"
            android:id="@+id/ImageView02_2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon3"
            android:id="@+id/ImageView03_2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon4"
            android:id="@+id/ImageView04_2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon5"
            android:id="@+id/ImageView05_2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon6"
            android:id="@+id/ImageView06_2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon7"
            android:id="@+id/ImageView07_2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon8"
            android:id="@+id/ImageView08_2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon9"
            android:id="@+id/ImageView09_2"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/equals"
            android:id="@+id/ImageViewEquals"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/TextViewAnswer"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="?attr/colorAccent"
        android:layout_height="60dp" />

</LinearLayout>
